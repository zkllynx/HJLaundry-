
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Dashboard</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/assets/img/svg/logo.svg" type="image/x-icon">
    <!-- Custom styles -->
    @Styles.Render("~/assets/css/style.css")
</head>
<body>
    <div class="layer"></div>
    <!-- ! Body -->
    <a class="skip-link sr-only" href="#skip-target">Skip to content</a>
    <div class="page-flex">
        <!-- ! Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-start">
                <div class="sidebar-head">
                    <a href="~/assets/img/avatar/" class="logo-wrapper" title="Home">
                        <span class="sr-only">Home</span>
                        <span class="icon logo" aria-hidden="true"></span>
                        <div class="logo-text">
                            <span class="logo-title">HJLaundry</span>
                            <span class="logo-subtitle">Dashboard Manager</span>
                        </div>
                    </a>
                    <button class="sidebar-toggle transparent-btn" title="Menu" type="button">
                        <span class="sr-only">Toggle menu</span>
                        <span class="icon menu-toggle" aria-hidden="true"></span>
                    </button>
                </div>
                <div class="sidebar-body">
                    <ul class="sidebar-body-menu">
                        <li>
                            <a class="active" href="@Url.Action("Index", "ms_pegawai")"><span class="icon user-3" aria-hidden="true"></span>Master Karyawan</a>
                        </li>
                        <li>
                            <a class="active" href="@Url.Action("Index", "ms_jabatan")"><span class="icon category" aria-hidden="true"></span>Master Jabatan</a>
                        </li>
                    </ul>
                    <ul class="cat-sub-menu"></ul>
                </div>
            </div>

        </aside>
        <div class="main-wrapper">
            <!-- ! Main nav -->
            <nav class="main-nav--bg">
                <div class="container main-nav">
                    <div class="main-nav-start">
                    </div>
                    <div class="main-nav-end">
                        <button class="sidebar-toggle transparent-btn" title="Menu" type="button">
                            <span class="sr-only">Toggle menu</span>
                            <span class="icon menu-toggle--gray" aria-hidden="true"></span>
                        </button>
                        <div class="lang-switcher-wrapper">


                        </div>
                        <button class="theme-switcher gray-circle-btn" type="button" title="Switch theme">
                            <span class="sr-only">Switch theme</span>
                            <i class="sun-icon" data-feather="sun" aria-hidden="true"></i>
                            <i class="moon-icon" data-feather="moon" aria-hidden="true"></i>
                        </button>
                        <div class="nav-user-wrapper">
                            <button class="nav-user-btn dropdown-btn" title="My profile" type="button">
                                <span class="sr-only">My profile</span>
                                <span class="nav-user-img">
                                </span>
                            </button>
                            <ul class="users-item-dropdown nav-user-dropdown dropdown">
                                <li>
                                    <a class="danger" href="##">
                                        <i data-feather="log-out" aria-hidden="true"></i>
                                        <span>Log out</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- ! Main -->
            <main class="main users chart-page" id="skip-target">

                <div class="container">
                    @RenderBody()
                    @RenderSection("scripts", required: false)
                </div>
            </main>
            <!-- ! Footer -->
            <footer class="footer">
                <div class="container footer--flex">
                    <div class="footer-start">
                        <p>
                            KELOMPOK 03 | 2022
                        </p>
                    </div>

                </div>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/Content/js")

    <!-- Chart library -->
    @Scripts.Render("~/assets/plugins/chart.min.js")
    <!-- Icons library -->
    @Scripts.Render("~/assets/plugins/feather.min.js")
    <!-- Custom scripts -->
    @Scripts.Render("~/assets/js/script.js")

</body>
</html>